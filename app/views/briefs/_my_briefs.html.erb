  <div class="container">
    <div class="row">
      <% unless current_user.owner %>
      <div class="col-xs-12">
<!-- condition owner true or false  -->
<!-- début de l'itération user n'est pas owner  -->
        <%= render 'briefs/brief_if_user_is_not_owner' %>
<!-- fin du contenu de la modal si user n'est pas owner -->
      </div>
      <% else %>
      <div class="col-xs-12">
<!-- début de l'itération user est owner  -->
        <%= render 'briefs/brief_if_user_is_owner' %>
<!-- fin du contenu de la modal si user est owner -->
      </div>
<!-- fin de la condition owner true or false  -->
      <% end %>
    </div>
  </div>

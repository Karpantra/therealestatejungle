<mjml>
  <mj-body>
    <mj-container>
      <mj-section>
        <mj-column>

          <mj-image width="100" href="<%= root_url %>" src="<%= email_image_url('TREJhome.png') %>"></mj-image>

          <mj-divider border-color="#07AB8A"></mj-divider>

          <mj-text font-size="15px" color="#313B3D" font-family="helvetica">Bonjour
            <%= @user.first_name %>,</mj-text>
          <mj-text font-size="15px" color="#313B3D" font-family="helvetica">Bienvenue dans The Real Estate Jungle</mj-text>

          <mj-text font-size="15px" color="#313B3D" font-family="helvetica">Vous pouvez commencer à rechercher les espaces de travail flexibles sur notre site en cliquant sur le lien suivant :</mj-text>


<div class="container">
  <div class="row">
    <div class=" col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="form-login">
        <h2>Log in with social network links...</h2>

        <%= render "devise/shared/socialnetworkslinks" %>
        <h2>... Or log in with the good old way</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%#= f.input :first_name, required: false, autofocus: true, label: "PrÃ©nom" %>
          <%#= f.input :last_name, required: false, autofocus: true, label: "Nom" %>
          <%= f.input :email, required: true, autofocus: true, placeholder: "mon.email@gmail.com" %>
          <%= f.input :password, required: true, placeholder: "************" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Se connecter" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


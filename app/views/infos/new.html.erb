<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h1 class="highlight">Dites-nous tout !</h1>
        </div>
      </div>
        <div class="form-login">
          <%= simple_form_for @info do |f| %>
          <div class="row">
            <div class="col-xs-12 col-md-6">
              <%= f.input :name, required: true, label: "Nom complet" %>
            </div>
            <div class="col-xs-12 col-md-6">
          <%= f.input :email, required: true %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-xs-12">
          <%= f.input :message, as: :text, :input_html => {:rows => 10}, label: "Message", placeholder: "Tapez votre message ici" %>
            </div>
          </div>
          <div class="hidden">
          <%= f.label :nickname %>
          <%= f.text_field :nickname, hint: "leave this field blank" %>
          </div>

          <%= f.submit "Envoyer le message", class: "btn btn-primary" %>
          <% end %>

        </div>
    </div>
  </div>
</div>

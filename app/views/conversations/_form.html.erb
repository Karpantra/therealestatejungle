<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label "Destinataire(s)" %>
      <%= f.select(:recipients, User.all.collect {|p| [ p.email, p.id ] }, {}, { multiple: true , class: "chosen-select form-control"})%>
    </div>
    <div class="form-group">
      <%= f.label "Objet" %>
      <%= f.text_field :subject, placeholder: "Objet", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Ecrivez votre message ici", rows: 4  %>
    </div>
    <%= f.submit "Envoyer", class: "btn btn-success" %>
<% end %>


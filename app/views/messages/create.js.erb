<% if @message.errors.any? %>
// handle validation erros later
<% else %>
  const messagesContainer = document.querySelector('.message');
  messagesContainer.insertAdjacentHTML('beforeend', '<%= j render "message", message: @message, user_is_messages_author: true %>');
  const input = document.querySelector('.message-content');
  input.value = '';
  input.blur();
  scrollLastMessageIntoView();
<% end %>

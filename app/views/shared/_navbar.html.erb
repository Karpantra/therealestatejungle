<div class="navbar-wagon <%= yield(:navbar_class) %>">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "TREJhome.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

    <!-- Links when logged in -->
    <%= link_to "Proposer un espace", new_coworking_path, class: "navbar-wagon-item-coworking navbar-wagon-link-coworking" %>
    <%= link_to "Mes critères", demands_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Mes devis", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Contact", pages_contact_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% avatar_url = current_user.facebook_picture_url || current_user.first_name %>
        <%= image_tag avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to edit_user_registration_path do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
<!--           <li>
            <%#= link_to new_coworking_path do %>
            <i class="fa fa-building"></i>  <%#= t(".profile", default: "Proposer un espace") %>
            <%# end %>
          </li> -->
          <li>
            <%= link_to pages_contact_path do %>
            <i class="fa fa-phone"></i>  <%= t(".profile", default: "Contact") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <!-- Login link (when logged out) -->
    <ul class="list-inline">
      <li>
        <%= link_to t("t.profile", default: "Proposer un espace"), new_coworking_path, class: "navbar-wagon-item-coworking navbar-wagon-link-coworking" %>
      </li>
      <li><%= link_to t(".profile", default: "Contact"), pages_contact_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      <li><%= link_to t(".sign_in", default: "S'identifier"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>
      </li>
    </ul>
  </div>

  <!-- Dropdown list appearing on mobile only -->

  <% if user_signed_in? %>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to new_user_session_path do %>
          <i class="fa fa-user"></i> <%= t(".sign_in", default: "S'identifier") %>
          <% end %>
        </li>
        <li>
          <%= link_to new_demand_path do %>
          <i class="fa fa-list-alt"></i> <%= t(".sign_in", default: "Mes critères") %>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
          <i class="fa fa-money"></i> <%= t(".sign_in", default: "Mes devis") %>
          <% end %>
        </li>
        <li>
          <%= link_to new_coworking_path do %>
          <i class="fa fa-building"></i>  <%= t(".sign_out", default: "Proposer un espace") %>
            <% end %>
        </li>
        <li>
          <%= link_to pages_contact_path do %>
          <i class="fa fa-phone"></i>  <%= t(".sign_out", default: "Contact") %>
            <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
        </li>
      </ul>
      <% else %>
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to new_user_session_path do %>
              <i class="fa fa-user"></i> <%= t(".sign_in", default: "S'identifier") %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
              <i class="fa fa-home"></i> <%= t(".sign_in", default: "Home") %>
              <% end %>
            <li>
                <%= link_to new_coworking_path do %>
                <i class="fa fa-building"></i>  <%= t(".sign_out", default: "Proposer un espace") %>
                  <% end %>
            </li>
            <li>
              <%= link_to pages_contact_path do %>
              <i class="fa fa-phone"></i>  <%= t(".sign_out", default: "Contact") %>
                <% end %>
              </li>
          </ul>
          <% end %>
    </div>
  </div>
</div>

